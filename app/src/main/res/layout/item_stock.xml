<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_marginBottom="10dp" xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView android:fontFamily="@font/helvetica_bold" android:textSize="14dp" android:padding="10dp" android:background="@drawable/edit_product_backgroud"  android:layout_width="0dp"
              android:gravity="center_horizontal|center_vertical"
              app:layout_constraintWidth_percent="0.4"
              android:id="@+id/viewName"
              android:layout_height="50dp" android:text="№"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:background="@drawable/edit_product_backgroud" android:fontFamily="@font/helvetica_bold" android:textSize="14dp" android:textAllCaps="true"
              android:layout_width="0dp" android:gravity="center_horizontal|center_vertical" app:layout_constraintWidth_percent="0.2" android:text="Харьков"
              android:layout_height="0dp" app:layout_constraintHeight_percent="0.99"
              app:layout_constraintStart_toEndOf="@+id/viewName" android:layout_marginStart="20dp"
              android:id="@+id/viewInStock"
              app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView android:textSize="14dp" android:fontFamily="@font/helvetica_bold" android:background="@drawable/edit_product_backgroud" android:layout_width="0dp"
              android:gravity="center_horizontal|center_vertical" app:layout_constraintWidth_percent="0.2"
              android:layout_height="0dp" app:layout_constraintHeight_percent="0.99" android:text="AA-11-3"
              app:layout_constraintStart_toEndOf="@+id/viewInStock" android:id="@+id/viewStock" android:layout_marginStart="20dp"
              app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:id="@+id/delete_item" android:textColor="#0E3C73"  android:fontFamily="@font/helvetica_medium" android:textSize="25dp" android:padding="10dp" android:background="@drawable/edit_product_backgroud"
              android:gravity="center_horizontal|center_vertical"
              android:layout_width="45dp"
              android:layout_height="50dp" android:layout_marginStart="20dp" android:text="X"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/viewStock"/>
</androidx.constraintlayout.widget.ConstraintLayout>