<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="scar.example.scarservice.scanner">


    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
        <Button
                android:id="@+id/btnSelectDevice"
                android:text="@string/btn_select_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:text="@string/btn_connect_scanner"
                android:id="@+id/btnConnectScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:text="@string/disconnect_scanner"
                android:id="@+id/btnDisconnectScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>