<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/preloader</item>
        <item name="colorPrimaryDark">@color/preloader</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ItemNav">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:paddingStart">100dp</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/preloader</item>
        <item name="android:colorBackground">@color/preloader</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/preloader</item>
        <item name="colorPrimaryDark">@color/darkActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="InputTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="CheckTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:buttonTint">#417505</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/preloader</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
